{
  "name": "flappy-bird-electron",
  "version": "1.0.0",
  "description": "A Flappy Bird style game built with Electron",
  "main": "main.js",
  "homepage": ".",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:msix": "electron-builder --win --publish=never",
    "dist": "electron-builder --publish=never"
  },
  "keywords": ["electron", "game", "flappy-bird"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.yourname.flappybird",
    "productName": "Flappy Bird",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!.git",
      "!.gitignore",
      "!README.md"
    ],
    "win": {
      "target": [
        {
          "target": "appx",
          "arch": ["x64"]
        },
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "publisherName": "Your Publisher Name",
      "requestedExecutionLevel": "asInvoker"
    },
    "appx": {
      "displayName": "Flappy Bird",
      "publisher": "CN=Your Publisher Name",
      "publisherDisplayName": "Your Publisher Name",
      "identityName": "YourPublisherName.FlappyBird",
      "backgroundColor": "#87CEEB",
      "languages": ["en-US"],
      "showNameOnTiles": true,
      "setBuildNumber": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
